.row.justify-content-center
  .col-12.col-md-8.col-lg-6
    .card
      .card-body
        %h5.card-title= @page_title

        = render 'devise/shared/omniauth', resource_action: 'Sign Up'

        = effective_form_with(model: resource, url: registration_path(resource_name)) do |f|
          = render 'users/sign_up_fields', f: f

          = f.submit 'Sign Up'

        = render 'devise/shared/links'
