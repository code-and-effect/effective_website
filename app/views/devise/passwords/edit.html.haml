.row.justify-content-center
  .col-12.col-md-8.col-lg-6
    .card
      .card-body
        %h5.card-title= @page_title
        = effective_form_with(model: resource, url: password_path(resource_name), method: :put) do |f|
          = f.hidden_field :reset_password_token
          = f.error :reset_password_token

          = f.password_field :password, label: 'New password', required: true, autofocus: true
          = f.password_field :password_confirmation, label: 'Confirm your new password', required: true

          = f.submit 'Change my password'

        = render 'devise/shared/links'
