- if flash.present?
  .row
    .col
      - flash.each do |key, value|
        %div{class: "alert alert-dismissible alert-#{key} fade show", role: 'alert'}
          = value.to_s.html_safe
          %button.close{type: 'button', 'data-dismiss': 'alert', 'aria-label': 'Close'}
            %span{'aria-hidden': true} &times;
