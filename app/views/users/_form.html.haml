.row
  .col-6
    = render 'users/sign_up_fields', f: f
  .col-6
    - if current_user.is?(:admin) && f.object != current_user
      = f.collection_check_boxes :roles, EffectiveRoles.roles_collection(f.object, current_user), :second, :first
    - else
      = effective_roles_summary(f.object)

/= f.input :files, as: :asset_box

.row
  .col-6
    %h3 Billing Address
    = effective_address_fields(f, :billing_address)

  .col-6
    %h3 Shipping Address
    = effective_address_fields(f, :shipping_address)
